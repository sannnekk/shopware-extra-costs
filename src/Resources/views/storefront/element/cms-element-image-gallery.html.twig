{% sw_extends '@Storefront/storefront/element/cms-element-image-gallery.html.twig' %}

{% block element_image_gallery %}
	{{ parent() }}

	{% block component_product_description_title %}
		<div class="h3 product-detail-description-title">
			{{ "detail.descriptionTitle"|trans|sw_sanitize }}
		</div>
	{% endblock %}

	{% block component_product_description_content %}
		{% block component_product_description_content_text %}
			<div class="product-detail-description-text" itemprop="description">
				{{ page.product.translated.description|raw }}
			</div>
		{% endblock %}

		{% block component_product_description_content_properties %}
			{% if page.product.sortedProperties|length > 0 %}
				{% sw_include '@Storefront/storefront/component/product/properties.html.twig' %}
			{% endif %}
		{% endblock %}
	{% endblock %}
{% endblock %}
